---
import '../styles/globals.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-dark text-white flex flex-col min-h-screen">

  <main class="flex-grow">
    <slot />
  </main>

 <footer class="relative mt-20">

  <!-- Glass container -->
  <div class="mx-6 mb-6 rounded-2xl border border-white/10 
              bg-white/5 backdrop-blur-xl 
              shadow-2xl shadow-black/30">

    <div class="max-w-6xl mx-auto px-8 py-10 text-center">

      <!-- Línea superior decorativa -->
      <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r 
                  from-transparent via-primary/40 to-transparent"></div>

      <!-- Copyright -->
      <p class="text-white/60 text-sm mb-6">
        © 2025 Jaziel Cervantes. Todos los derechos reservados.
      </p>

      <!-- Links -->
      <div class="flex flex-wrap justify-center items-center gap-6 mb-6 text-sm">
        <a href="#" class="text-white/60 hover:text-white transition-colors duration-300">
          Politica de Privacidad
        </a>

        <span class="text-white/20">•</span>

        <a href="#" class="text-white/60 hover:text-white transition-colors duration-300">
          Terminos de Servicio
        </a>

        <span class="text-white/20">•</span>

        <a href="#" class="text-white/60 hover:text-white transition-colors duration-300">
          Mapa del Sitio
        </a>
      </div>

      <!-- GitHub Button -->
      <a 
        href="https://github.com/JazielCervantes/TU_REPOSITORIO"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-6 py-3 
               rounded-lg bg-gradient-to-r from-primary/80 to-accent/80
               hover:from-primary hover:to-accent
               transition-all duration-300 
               text-white font-semibold 
               shadow-lg shadow-primary/20
               hover:scale-105"
      >
        <!-- GitHub icon -->
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 
          2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 
          0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343
          -.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608
          1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 
          2.91.832.092-.647.35-1.088.636-1.338-2.22-.253
          -4.555-1.113-4.555-4.951 0-1.093.39-1.988 
          1.029-2.688-.103-.253-.446-1.272.098-2.65 
          0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 
          6.844c.85.004 1.705.115 2.504.337 
          1.909-1.296 2.747-1.027 
          2.747-1.027.546 1.379.202 2.398.1 
          2.651.64.7 1.028 1.595 
          1.028 2.688 0 3.848-2.339 4.695-4.566 
          4.943.359.309.678.92.678 
          1.855 0 1.338-.012 2.419-.012 
          2.747 0 .268.18.58.688.482A10.019 
          10.019 0 0022 12.017C22 
          6.484 17.522 2 12 2z" 
          clip-rule="evenodd"/>
        </svg>

        Inicia este proyecto en GitHub
      </a>

    </div>
  </div>
</footer>


</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Work Sans', sans-serif;
    overflow-x: hidden;
  }
</style>
